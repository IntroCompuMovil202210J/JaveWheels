<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/nav_graph.xml"
	app:startDestination="@id/loginFragment">

	<fragment
		android:id="@+id/passengerHomeFragment"
		android:name="com.abmodel.uwheels.ui.passenger.home.PassengerHomeFragment"
		android:label="fragment_passenger_home"
		tools:layout="@layout/fragment_passenger_home">
		<action
			android:id="@+id/action_passengerHomeFragment_to_contactsFragment"
			app:destination="@id/contactsFragment" />
		<action
			android:id="@+id/action_passengerHomeFragment_to_chatsFragment"
			app:destination="@id/chatsFragment" />
		<action
			android:id="@+id/action_passengerHomeFragment_to_requestRideFragment"
			app:destination="@id/requestRideFragment" />
		<action
			android:id="@+id/action_passengerHomeFragment_to_passengerCreateRideFragment"
			app:destination="@id/passengerCreateRideFragment" />
		<action
			android:id="@+id/action_passengerHomeFragment_to_loginFragment"
			app:destination="@id/loginFragment"
			app:popUpTo="@id/nav_graph.xml"
			app:popUpToInclusive="true" />
		<action
			android:id="@+id/action_passengerHomeFragment_to_becomeDriverFragment"
			app:destination="@id/becomeDriverFragment" />
		<action
			android:id="@+id/action_passengerHomeFragment_to_driverHomeFragment"
			app:destination="@id/driverHomeFragment"
			app:popUpTo="@id/nav_graph.xml"
			app:popUpToInclusive="true" />
		<action
			android:id="@+id/action_passengerHomeFragment_to_profileDetailsFragment"
			app:destination="@id/profileDetailsFragment" />
		<action
			android:id="@+id/action_passengerHomeFragment_to_ridesFragment"
			app:destination="@id/ridesFragment" />
		<action
			android:id="@+id/action_passengerHomeFragment_to_hostedRidesFragment"
			app:destination="@id/hostedRidesFragment" />
	</fragment>
	<fragment
		android:id="@+id/loginFragment"
		android:name="com.abmodel.uwheels.ui.shared.login.LoginFragment"
		android:label="fragment_login"
		tools:layout="@layout/fragment_login">
		<action
			android:id="@+id/action_loginFragment_to_signUpFragment"
			app:destination="@id/signUpFragment"/>
		<action
			android:id="@+id/action_loginFragment_to_passengerHomeFragment"
			app:destination="@id/passengerHomeFragment"
			app:popUpTo="@id/nav_graph.xml"
			app:popUpToInclusive="true" />
	</fragment>
	<fragment
		android:id="@+id/signUpFragment"
		android:name="com.abmodel.uwheels.ui.shared.signup.SignUpFragment"
		android:label="fragment_sign_up"
		tools:layout="@layout/fragment_sign_up">
		<action
			android:id="@+id/action_signUpFragment_to_becomeDriverFragment"
			app:destination="@id/becomeDriverFragment"
			app:popUpTo="@id/nav_graph.xml" />
		<action
			android:id="@+id/action_signUpFragment_to_passengerHomeFragment"
			app:destination="@id/passengerHomeFragment"
			app:popUpTo="@id/nav_graph.xml"
			app:popUpToInclusive="true" />
	</fragment>
	<fragment
		android:id="@+id/becomeDriverFragment"
		android:name="com.abmodel.uwheels.ui.driver.apply.BecomeDriverFragment"
		android:label="fragment_become_driver"
		tools:layout="@layout/fragment_become_driver">
		<action
			android:id="@+id/action_becomeDriverFragment_to_driverApplicationFragment"
			app:destination="@id/driverApplicationFragment" />
		<action
			android:id="@+id/action_becomeDriverFragment_to_passengerHomeFragment"
			app:destination="@id/passengerHomeFragment"
			app:popUpTo="@id/nav_graph.xml"
			app:popUpToInclusive="true" />
	</fragment>
	<fragment
		android:id="@+id/driverApplicationFragment"
		android:name="com.abmodel.uwheels.ui.driver.apply.DriverApplicationFragment"
		android:label="fragment_driver_application"
		tools:layout="@layout/fragment_driver_application">
		<action
			android:id="@+id/action_driverApplicationFragment_to_driverHomeFragment"
			app:destination="@id/driverHomeFragment"
			app:popUpTo="@id/nav_graph.xml"
			app:popUpToInclusive="true" />
	</fragment>
	<fragment
		android:id="@+id/contactsFragment"
		android:name="com.abmodel.uwheels.ui.passenger.contacts.ContactsFragment"
		android:label="fragment_passenger_contacts"
		tools:layout="@layout/fragment_passenger_contacts"/>
	<fragment
		android:id="@+id/chatsFragment"
		android:name="com.abmodel.uwheels.ui.shared.chat.ChatsFragment"
		android:label="fragment_chats"
		tools:layout="@layout/fragment_chats">
		<action
			android:id="@+id/action_chatsFragment_to_chatFragment"
			app:destination="@id/chatFragment" />
	</fragment>
	<fragment
		android:id="@+id/chatFragment"
		android:name="com.abmodel.uwheels.ui.shared.chat.ChatFragment"
		android:label="fragment_chat"
		tools:layout="@layout/fragment_chat"/>
	<fragment
		android:id="@+id/requestRideFragment"
		android:name="com.abmodel.uwheels.ui.passenger.ride.request.RequestRideFragment"
		android:label="requestRideFragment">
		<action
			android:id="@+id/action_requestRideFragment_to_searchAddressFragment"
			app:destination="@id/searchAddressFragment" />
	</fragment>
	<fragment
		android:id="@+id/searchAddressFragment"
		android:name="com.abmodel.uwheels.ui.shared.search.SearchAddressFragment"
		android:label="fragment_search_address"
		tools:layout="@layout/fragment_search_address">
		<argument
			android:name="selected_input"
			app:argType="string" />
		<argument
			android:name="source"
			app:argType="com.abmodel.uwheels.data.model.CustomAddress"
			app:nullable="true" />
		<argument
			android:name="destination"
			app:argType="com.abmodel.uwheels.data.model.CustomAddress"
			app:nullable="true" />
	</fragment>
	<fragment
		android:id="@+id/passengerCreateRideFragment"
		android:name="com.abmodel.uwheels.ui.passenger.ride.create.PassengerCreateRideFragment"
		android:label="fragment_passenger_create_ride"
		tools:layout="@layout/fragment_passenger_create_ride">
		<action
			android:id="@+id/action_passengerCreateRideFragment_to_searchAddressFragment"
			app:destination="@id/searchAddressFragment" />
	</fragment>
	<fragment
		android:id="@+id/driverHomeFragment"
		android:name="com.abmodel.uwheels.ui.driver.home.DriverHomeFragment"
		android:label="fragment_driver_home"
		tools:layout="@layout/fragment_driver_home" >
		<action
			android:id="@+id/action_driverHomeFragment_to_loginFragment"
			app:destination="@id/loginFragment"
			app:popUpTo="@id/nav_graph.xml"
			app:popUpToInclusive="true" />
		<action
			android:id="@+id/action_driverHomeFragment_to_passengerHomeFragment"
			app:destination="@id/passengerHomeFragment"
			app:popUpTo="@id/nav_graph.xml"
			app:popUpToInclusive="true" />
		<action
			android:id="@+id/action_driverHomeFragment_to_profileDetailsFragment"
			app:destination="@id/profileDetailsFragment" />
		<action
			android:id="@+id/action_driverHomeFragment_to_ridesFragment"
			app:destination="@id/ridesFragment" />
		<action
			android:id="@+id/action_driverHomeFragment_to_hostedRidesFragment"
			app:destination="@id/hostedRidesFragment" />
		<action
			android:id="@+id/action_driverHomeFragment_to_chatsFragment"
			app:destination="@id/chatsFragment" />
	</fragment>
	<fragment
		android:id="@+id/profileDetailsFragment"
		android:name="com.abmodel.uwheels.ui.shared.profile.ProfileDetailsFragment"
		android:label="fragment_profile_details"
		tools:layout="@layout/fragment_profile_details" >
		<action
			android:id="@+id/action_profileDetailsFragment_to_loginFragment"
			app:destination="@id/loginFragment"
			app:popUpTo="@id/nav_graph.xml"
			app:popUpToInclusive="true" />
		<action
			android:id="@+id/action_profileDetailsFragment_to_editProfileFragment"
			app:destination="@id/editProfileFragment" />
	</fragment>
	<fragment
		android:id="@+id/editProfileFragment"
		android:name="com.abmodel.uwheels.ui.shared.profile.EditProfileFragment"
		android:label="fragment_edit_profile"
		tools:layout="@layout/fragment_edit_profile" >
		<action
			android:id="@+id/action_editProfileFragment_to_profileDetailsFragment"
			app:destination="@id/profileDetailsFragment"
			app:popUpTo="@id/profileDetailsFragment" />
	</fragment>
	<fragment
		android:id="@+id/ridesFragment"
		android:name="com.abmodel.uwheels.ui.shared.ride.rides.RidesFragment"
		android:label="fragment_rides" />
	<fragment
		android:id="@+id/hostedRidesFragment"
		android:name="com.abmodel.uwheels.ui.shared.ride.hosted.HostedRidesFragment"
		android:label="fragment_hosted_rides" >
		<action
			android:id="@+id/action_hostedRidesFragment_to_hostedRideDetailFragment"
			app:destination="@id/hostedRideDetailFragment" />
	</fragment>
	<fragment
		android:id="@+id/hostedRideRequestsFragment"
		android:name="com.abmodel.uwheels.ui.shared.ride.hosted.HostedRideRequestsFragment"
		android:label="HostedRideRequestsFragment" />
	<fragment
		android:id="@+id/hostedRideDetailFragment"
		android:name="com.abmodel.uwheels.ui.shared.ride.hosted.HostedRideDetailFragment"
		android:label="fragment_hosted_ride_detail"
		tools:layout="@layout/fragment_hosted_ride_detail" >
		<action
			android:id="@+id/action_hostedRideDetailFragment_to_hostedRideRequestsFragment"
			app:destination="@id/hostedRideRequestsFragment" />
	</fragment>
</navigation>
