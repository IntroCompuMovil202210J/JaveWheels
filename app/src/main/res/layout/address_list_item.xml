<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:foreground="?attr/selectableItemBackground"
	android:orientation="horizontal">

	<TextView
		android:id="@+id/address_name"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginHorizontal="20dp"
		android:layout_marginTop="6dp"
		android:ellipsize="end"
		android:letterSpacing="0"
		android:maxLines="1"
		android:textAppearance="?textAppearanceBody1"
		android:textColor="@color/dark_gray"
		android:textSize="20sp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		tools:text="Address name" />

	<TextView
		android:id="@+id/address_line"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginHorizontal="20dp"
		android:layout_marginBottom="6dp"
		android:textAppearance="?textAppearanceBody2"
		android:textColor="#575757"
		android:textSize="17sp"
		app:layout_constraintBottom_toTopOf="@id/address_divider"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/address_name"
		tools:text="Address line" />

	<com.google.android.material.divider.MaterialDivider
		android:id="@+id/address_divider"
		android:layout_width="match_parent"
		android:layout_marginHorizontal="8dp"
		android:layout_height="1dp"
		app:dividerColor="#CCAAAAAA"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>