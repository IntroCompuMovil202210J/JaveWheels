<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:clickable="true"
	android:focusable="true"
	android:foreground="?attr/selectableItemBackground"
	android:orientation="horizontal">

	<androidx.constraintlayout.widget.ConstraintLayout
		android:id="@+id/profile_photo_layout"
		android:layout_width="50dp"
		android:layout_height="50dp"
		android:layout_marginStart="20dp"
		android:layout_marginTop="8dp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">

		<com.google.android.material.imageview.ShapeableImageView
			android:id="@+id/profile_photo"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:clickable="true"
			android:focusable="true"
			android:padding="2dp"
			android:scaleType="centerCrop"
			app:layout_constraintBottom_toTopOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:shapeAppearanceOverlay="@style/shapeableImageViewRounded"
			app:srcCompat="@drawable/ic_account_circle"
			tools:ignore="SpeakableTextPresentCheck" />

		<ImageView
			android:id="@+id/is_verified"
			android:layout_width="18dp"
			android:layout_height="18dp"
			android:contentDescription="@string/profile_is_verified"
			android:elevation="2dp"
			android:visibility="gone"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:srcCompat="@drawable/ic_checkmark"
			tools:visibility="visible" />

	</androidx.constraintlayout.widget.ConstraintLayout>

	<TextView
		android:id="@+id/name"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginHorizontal="8dp"
		android:ellipsize="end"
		android:letterSpacing="0"
		android:maxLines="1"
		android:textAppearance="?textAppearanceHeadline5"
		android:textColor="@color/dark_gray"
		app:layout_constraintBottom_toBottomOf="@id/profile_photo_layout"
		app:layout_constraintEnd_toStartOf="@id/rating_container"
		app:layout_constraintStart_toEndOf="@id/profile_photo_layout"
		app:layout_constraintTop_toTopOf="@id/profile_photo_layout"
		tools:text="@tools:sample/full_names" />

	<androidx.cardview.widget.CardView
		android:id="@+id/rating_container"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginEnd="20dp"
		android:clickable="true"
		android:clipToPadding="false"
		android:elevation="2dp"
		android:focusable="true"
		android:foreground="?attr/selectableItemBackground"
		app:cardCornerRadius="8dp"
		app:layout_constraintBottom_toBottomOf="@id/name"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="@id/name"
		tools:ignore="TouchTargetSizeCheck">

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:clipToPadding="false"
			android:orientation="horizontal"
			android:paddingVertical="3dp"
			android:paddingStart="6dp"
			android:paddingEnd="4dp"
			tools:ignore="UseCompoundDrawables">

			<TextView
				android:id="@+id/rating"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_gravity="center_vertical"
				android:layout_marginEnd="2dp"
				android:textAppearance="?textAppearanceBody2"
				tools:text="4.5" />

			<ImageView
				android:layout_width="20dp"
				android:layout_height="20dp"
				app:srcCompat="@drawable/ic_star"
				app:tint="#ffd700"
				tools:ignore="ContentDescription,ImageContrastCheck" />

		</LinearLayout>

	</androidx.cardview.widget.CardView>

	<ImageView
		android:id="@+id/image_info"
		android:layout_width="16dp"
		android:layout_height="16dp"
		android:padding="1dp"
		app:layout_constraintBottom_toBottomOf="@id/info"
		app:layout_constraintStart_toStartOf="@id/profile_photo_layout"
		app:layout_constraintTop_toTopOf="@id/info"
		app:srcCompat="@drawable/ic_info"
		app:tint="@color/black"
		tools:ignore="ContentDescription" />

	<TextView
		android:id="@+id/info"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="8dp"
		android:layout_marginTop="4dp"
		android:layout_marginEnd="20dp"
		android:ellipsize="end"
		android:maxLines="1"
		android:textAppearance="?textAppearanceSubtitle1"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toEndOf="@id/image_info"
		app:layout_constraintTop_toBottomOf="@id/profile_photo_layout"
		tools:text="Requested at 07/02/2022 07:00 a.m." />

	<TextView
		android:id="@+id/subtitle"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginTop="4dp"
		android:layout_marginEnd="20dp"
		android:ellipsize="end"
		android:maxLines="1"
		android:textAppearance="?textAppearanceButton"
		android:textColor="@color/black"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="@id/image_info"
		app:layout_constraintTop_toBottomOf="@id/info"
		tools:text="They looked for:" />

	<ImageView
		android:id="@+id/image_source"
		android:layout_width="16dp"
		android:layout_height="16dp"
		android:elevation="1dp"
		android:padding="4dp"
		app:layout_constraintBottom_toBottomOf="@id/source"
		app:layout_constraintStart_toStartOf="@id/image_info"
		app:layout_constraintTop_toTopOf="@id/source"
		app:srcCompat="@drawable/ic_circle"
		app:tint="@color/black"
		tools:ignore="ContentDescription" />

	<TextView
		android:id="@+id/source"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginEnd="20dp"
		android:ellipsize="end"
		android:maxLines="1"
		android:textAppearance="?textAppearanceSubtitle1"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="@id/info"
		app:layout_constraintTop_toBottomOf="@id/subtitle"
		tools:text="(0.1 km) Pontificia Universidad Javeriana" />

	<ImageView
		android:id="@+id/image_destination"
		android:layout_width="16dp"
		android:layout_height="16dp"
		android:elevation="1dp"
		android:padding="4dp"
		app:layout_constraintBottom_toBottomOf="@id/destination"
		app:layout_constraintStart_toStartOf="@id/image_source"
		app:layout_constraintTop_toTopOf="@id/destination"
		app:srcCompat="@drawable/ic_circle"
		app:tint="@color/color_primary"
		tools:ignore="ContentDescription" />

	<TextView
		android:id="@+id/destination"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginEnd="20dp"
		android:ellipsize="end"
		android:maxLines="1"
		android:textAppearance="?textAppearanceSubtitle1"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="@id/source"
		app:layout_constraintTop_toBottomOf="@id/source"
		tools:text="(0.3 km) Andino Shopping Mall" />

	<com.google.android.material.divider.MaterialDivider
		android:layout_width="1dp"
		android:layout_height="0dp"
		android:layout_marginVertical="8dp"
		app:dividerColor="@color/dark_gray"
		app:layout_constraintBottom_toBottomOf="@id/image_destination"
		app:layout_constraintEnd_toEndOf="@id/image_source"
		app:layout_constraintStart_toStartOf="@id/image_source"
		app:layout_constraintTop_toTopOf="@id/image_source" />

	<ImageView
		android:id="@+id/image_calendar"
		android:layout_width="16dp"
		android:layout_height="16dp"
		app:layout_constraintBottom_toBottomOf="@id/date"
		app:layout_constraintStart_toStartOf="@id/image_destination"
		app:layout_constraintTop_toTopOf="@id/date"
		app:srcCompat="@drawable/ic_calendar_padded"
		app:tint="@color/black"
		tools:ignore="ContentDescription" />

	<TextView
		android:id="@+id/date"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginEnd="20dp"
		android:ellipsize="end"
		android:letterSpacing="0"
		android:maxLines="1"
		android:textAppearance="?textAppearanceSubtitle1"
		android:textColor="@color/dark_gray"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="@id/destination"
		app:layout_constraintTop_toBottomOf="@id/destination"
		tools:text="07/06/2022 07:00 a.m." />

	<Button
		android:id="@+id/accept"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginEnd="8dp"
		android:text="@string/accept"
		app:layout_constraintEnd_toStartOf="@id/reject"
		app:layout_constraintStart_toStartOf="@id/image_calendar"
		app:layout_constraintTop_toBottomOf="@id/date" />

	<Button
		android:id="@+id/reject"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="8dp"
		android:text="@string/reject"
		app:layout_constraintEnd_toEndOf="@id/date"
		app:layout_constraintStart_toEndOf="@id/accept"
		app:layout_constraintTop_toTopOf="@id/accept" />

	<com.google.android.material.divider.MaterialDivider
		android:id="@+id/divider"
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:layout_marginHorizontal="8dp"
		android:layout_marginTop="2dp"
		app:dividerColor="#CCAAAAAA"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/accept" />

</androidx.constraintlayout.widget.ConstraintLayout>
