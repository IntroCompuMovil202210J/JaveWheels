<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:clickable="true"
	android:focusable="true"
	android:foreground="?attr/selectableItemBackground"
	android:orientation="horizontal">

	<ImageView
		android:id="@+id/image_source"
		android:layout_width="14dp"
		android:layout_height="14dp"
		android:layout_marginStart="8dp"
		android:elevation="1dp"
		android:padding="3dp"
		app:layout_constraintBottom_toBottomOf="@id/source"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="@id/source"
		app:srcCompat="@drawable/ic_circle"
		app:tint="@color/black"
		tools:ignore="ContentDescription" />

	<TextView
		android:id="@+id/source"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginHorizontal="4dp"
		android:layout_marginTop="8dp"
		android:ellipsize="end"
		android:maxLines="1"
		android:textAppearance="?textAppearanceBody2"
		app:layout_constraintEnd_toStartOf="@id/rating"
		app:layout_constraintStart_toEndOf="@id/image_source"
		app:layout_constraintTop_toTopOf="parent"
		tools:text="(0.1 km) Pontificia Universidad Javeriana" />

	<ImageView
		android:id="@+id/image_destination"
		android:layout_width="14dp"
		android:layout_height="14dp"
		android:elevation="1dp"
		android:padding="3dp"
		app:layout_constraintBottom_toBottomOf="@id/destination"
		app:layout_constraintStart_toStartOf="@id/image_source"
		app:layout_constraintTop_toTopOf="@id/destination"
		app:srcCompat="@drawable/ic_circle"
		app:tint="@color/color_primary"
		tools:ignore="ContentDescription" />

	<TextView
		android:id="@+id/destination"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginEnd="4dp"
		android:ellipsize="end"
		android:maxLines="1"
		android:textAppearance="?textAppearanceBody2"
		app:layout_constraintEnd_toStartOf="@id/capacity"
		app:layout_constraintStart_toStartOf="@id/source"
		app:layout_constraintTop_toBottomOf="@id/source"
		tools:text="(0.3 km) Andino Shopping Mall" />

	<com.google.android.material.divider.MaterialDivider
		android:layout_width="1dp"
		android:layout_height="0dp"
		android:layout_marginVertical="8dp"
		app:dividerColor="@color/dark_gray"
		app:layout_constraintBottom_toBottomOf="@id/image_destination"
		app:layout_constraintEnd_toEndOf="@id/image_source"
		app:layout_constraintStart_toStartOf="@id/image_source"
		app:layout_constraintTop_toTopOf="@id/image_source" />

	<ImageView
		android:id="@+id/image_calendar"
		android:layout_width="14dp"
		android:layout_height="14dp"
		android:padding="1dp"
		app:layout_constraintBottom_toBottomOf="@id/date"
		app:layout_constraintStart_toStartOf="@id/image_destination"
		app:layout_constraintTop_toTopOf="@id/date"
		app:srcCompat="@drawable/ic_calendar_padded"
		app:tint="@color/black"
		tools:ignore="ContentDescription" />

	<TextView
		android:id="@+id/date"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginEnd="4dp"
		android:ellipsize="end"
		android:letterSpacing="0"
		android:maxLines="1"
		android:textAppearance="?textAppearanceBody2"
		app:layout_constraintEnd_toStartOf="@id/additional_info"
		app:layout_constraintStart_toStartOf="@id/destination"
		app:layout_constraintTop_toBottomOf="@id/destination"
		tools:text="(2 hours) 07/06/2022 07:00 a.m." />

	<ImageView
		android:id="@+id/image_star"
		android:layout_width="14dp"
		android:layout_height="14dp"
		android:layout_marginEnd="8dp"
		app:layout_constraintBottom_toBottomOf="@+id/rating"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="@id/rating"
		app:srcCompat="@drawable/ic_star"
		app:tint="@color/color_primary"
		tools:ignore="ContentDescription" />

	<TextView
		android:id="@+id/rating"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginEnd="4dp"
		android:ellipsize="end"
		android:letterSpacing="0"
		android:maxLines="1"
		android:textAppearance="?textAppearanceBody2"
		android:textColor="@color/color_primary"
		app:layout_constraintEnd_toStartOf="@id/image_star"
		app:layout_constraintTop_toTopOf="@id/source"
		tools:text="4.5" />

	<ImageView
		android:id="@+id/image_capacity"
		android:layout_width="14dp"
		android:layout_height="14dp"
		android:padding="1dp"
		app:layout_constraintBottom_toBottomOf="@id/capacity"
		app:layout_constraintEnd_toEndOf="@id/image_star"
		app:layout_constraintTop_toTopOf="@id/capacity"
		app:srcCompat="@drawable/ic_account_circle"
		app:tint="@color/color_primary"
		tools:ignore="ContentDescription" />

	<TextView
		android:id="@+id/capacity"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:ellipsize="end"
		android:letterSpacing="0"
		android:maxLines="1"
		android:textAppearance="?textAppearanceBody2"
		android:textColor="@color/color_primary"
		app:layout_constraintEnd_toEndOf="@id/rating"
		app:layout_constraintTop_toBottomOf="@id/rating"
		tools:text="2/2" />

	<TextView
		android:id="@+id/additional_info"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:ellipsize="end"
		android:letterSpacing="0"
		android:maxLines="1"
		android:textAppearance="?textAppearanceBody2"
		android:textColor="@color/color_primary"
		app:layout_constraintEnd_toEndOf="@id/image_capacity"
		app:layout_constraintTop_toBottomOf="@id/capacity"
		tools:text="$5.000" />

	<com.google.android.material.divider.MaterialDivider
		android:id="@+id/divider"
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:layout_marginHorizontal="8dp"
		android:layout_marginTop="8dp"
		app:dividerColor="#CCAAAAAA"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/date" />

</androidx.constraintlayout.widget.ConstraintLayout>
