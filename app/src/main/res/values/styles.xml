<?xml version="1.0" encoding="utf-8"?>
<resources>

	<!-- Primary button text appearance -->
	<style name="TextAppearance.UWheels.ButtonPrimary" parent="TextAppearance.AppCompat.Widget.Button">
		<item name="android:fontFamily">@font/poppins_medium</item>
		<item name="android:textSize">@dimen/text_size_medium</item>
		<item name="android:textAllCaps">false</item>
		<item name="android:letterSpacing">0</item>
	</style>

	<!-- Primary button, styled for common buttons in the app -->
	<style name="Widget.UWheels.ButtonPrimary" parent="Widget.MaterialComponents.Button">
		<!-- Makes the button's insides as short as possible -->
		<item name="android:insetTop">0dp</item>
		<item name="android:insetBottom">0dp</item>
		<item name="android:minHeight">48dp</item>
		<item name="android:elevation">4dp</item>

		<item name="android:focusable">true</item>
		<item name="android:clickable">true</item>

		<!-- Sets the text appearance to a style -->
		<item name="android:textAppearance">@style/TextAppearance.UWheels.ButtonPrimary</item>
		<item name="android:textColor">@color/dark_gray</item>

		<!-- Sets the background to a drawable
			 that gives it a rounded-corners shape
			 and a solid color	-->
		<item name="android:background">@drawable/button_primary_background</item>
	</style>

	<style name="Widget.UWheels.ButtonPrimary.Medium">
		<item name="android:height">52dp</item>
	</style>

</resources>
