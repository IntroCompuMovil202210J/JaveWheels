<?xml version="1.0" encoding="utf-8"?>
<resources>

	<!-- Primary button text appearance -->
	<style name="TextAppearance.UWheels.ButtonPrimary" parent="TextAppearance.MaterialComponents.Button">
		<item name="fontFamily">@font/poppins_medium</item>
		<item name="android:fontFamily">@font/poppins_medium</item>
		<item name="android:textSize">@dimen/text_size_medium</item>
		<item name="android:textAllCaps">false</item>
		<item name="android:letterSpacing">0</item>
	</style>

	<!-- Primary button, styled for common buttons in the app -->
	<style name="Widget.UWheels.ButtonPrimary" parent="Widget.MaterialComponents.Button">
		<!-- Makes the button's insides as short as possible -->
		<item name="android:insetTop">0dp</item>
		<item name="android:insetBottom">0dp</item>
		<item name="android:minHeight">48dp</item>
		<item name="android:elevation">4dp</item>

		<item name="android:focusable">true</item>
		<item name="android:clickable">true</item>

		<!-- Sets the text appearance to a style -->
		<item name="android:textAppearance">@style/TextAppearance.UWheels.ButtonPrimary</item>
		<item name="android:textColor">@color/dark_gray</item>

		<!-- Sets the background to a drawable
			 that gives it a rounded-corners shape
			 and a solid color	-->
		<item name="android:background">@drawable/button_primary_background</item>
	</style>

	<style name="Widget.UWheels.ButtonPrimary.Medium">
		<item name="android:height">52dp</item>
	</style>

	<!-- Outlined button -->
	<style name="Widget.UWheels.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
		<item name="android:minHeight">@dimen/min_height_view</item>

		<item name="cornerRadius">@dimen/button_corner_radius</item>
		<item name="strokeWidth">1.5dp</item>
		<item name="strokeColor">@color/white</item>
		<item name="rippleColor">@color/white_40</item>

		<item name="android:textAppearance">@style/TextAppearance.UWheels.ButtonPrimary</item>
		<item name="android:textColor">@color/white</item>
	</style>

	<!-- TextInputLayout OutlinedBox -->
	<!-- Light (brighter color) -->
	<style name="Widget.UWheels.TextInputLayout.OutlinedBox.Light" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
		<item name="boxStrokeColor">@color/text_input_stroke_light</item>
		<item name="android:textColorHint">@color/white_80</item>
		<item name="hintEnabled">false</item>
		<item name="colorControlActivated">@color/white</item>
		<item name="colorControlNormal">@color/white</item>
	</style>

	<style name="Widget.UWheels.TextInputEditText.OutlinedBox.Light" parent="">
		<item name="android:fontFamily">@font/poppins</item>
		<item name="android:minHeight">48dp</item>
		<item name="android:paddingTop">0dp</item>
		<item name="android:paddingBottom">0dp</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:textColorHint">@color/white_80</item>
		<item name="android:textSize">@dimen/text_size_medium</item>
		<item name="android:textCursorDrawable">@null</item>
	</style>

</resources>
